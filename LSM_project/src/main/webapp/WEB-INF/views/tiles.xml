<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
	<!-- main layout -->
	
	<definition name="root.*" template="/WEB-INF/views/include/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/include/header.jsp" />
		<put-attribute name="body" value="/WEB-INF/views/{1}.jsp" />
		<put-attribute name="js" value="/js/{1}.js"/>
		<put-attribute name="css" value="/css/{1}.css"/>
		<put-attribute name="footer" value="/WEB-INF/views/include/footer.jsp" />
	</definition>
	
	


</tiles-definitions>
